            <!-- Detail Mata Kuliah -->
            <h1 class="card-title">Kelas</h1>
            <div class="card mb-4">
              
              <div class="card-body">
                <% function convertToRoman(num) {
                  const romanNumerals = {
                    1: 'I',
                    4: 'IV',
                    5: 'V',
                    9: 'IX',
                    10: 'X',
                    40: 'XL',
                    50: 'L',
                    90: 'XC',
                    100: 'C',
                    400: 'CD',
                    500: 'D',
                    900: 'CM',
                    1000: 'M'
                  };
              
                  let result = '';
              
                  // Loop melalui objek romanNumerals
                  const keys = Object.keys(romanNumerals).reverse();
                  for (let i = 0; i < keys.length; i++) {
                    const currentNumeral = keys[i];
                    while (num >= currentNumeral) {
                      result += romanNumerals[currentNumeral];
                      num -= currentNumeral;
                    }
                  }
              
                  return result;
                } %>
                <h3 class="card-title">Mata kuliah</h3>
                <p class="card-text">Kode MK: <%= matkul.kode_mk %></p>
                <p class="card-text">Nama Matkul: <%= matkul.nama_matkul %></p>
                <p class="card-text" style="text-transform: capitalize;">Jadwal Hari: <% const [hari, waktu] = matkul.jadwal.split('_'); %><%= hari %></p>
                <p class="card-text" style="text-transform: capitalize;">Jam: <%= waktu %></p>
                <p class="card-text">Semester: <%= convertToRoman(matkul.smt) %></p>

                <!-- Tambahkan informasi lainnya sesuai dengan struktur tabel tb_mk -->
              </div>
            </div>
          
