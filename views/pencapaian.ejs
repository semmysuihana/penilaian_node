                    <div class="col-md-9"><%= nilai.tugas %></div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 text-end"><strong>uts :</strong></div>
                    <div class="col-md-9"><%= nilai.uts %></div>
                </div>
                <div class="row mb-3">
