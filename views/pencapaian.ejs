                    dataCPMK.forEach(a => {
                        if(a.kode_cpmk==cpmk.kode_cpmk){
                %>
                <div class="row mb-3">
                    <div class="col-md-3 text-end"><strong>CPMK :</strong></div>
                    <div class="col-md-9"><%= cpmk.kode_cpmk %></div>
