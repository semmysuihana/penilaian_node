                <% 
                                let total =(((nilai.absensi*6.25)*(nilai.absensiAturan/100))+(nilai.tugas*(nilai.tugasAturan/100))+(nilai.uts*(nilai.utsAturan/100))+(nilai.uas*(nilai.uasAturan/100)));
