                        if(cpl.kode_cpl==pl.kode_cpl){
                            dataPL.forEach(a => {
                                if(a.kode_pl==pl.kode_pl){
                    %>
                    <div class="col-md-3 text-end"><strong>PL :</strong></div>
                    <div class="col-md-9"><%= pl.kode_pl %></div>
