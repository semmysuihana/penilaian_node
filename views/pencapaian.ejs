                    <div class="col-md-3 text-end"></div>
                    <div class="col-md-9">
                        <i class="mb-3 mt-3 p-1 text-light bg-success">Lulus : <%= a.profil_lulus %></i>
                    </div>
                    <% } else { %>
                    <div class="col-md-3 text-end"></div>
                    <div class="col-md-9">
                        <i class="mb-3 mt-3 p-1 text-light bg-danger">Tidak Lulus : <%= a.profil_lulus %></i>
                    </div>
                    <% } %>
                    <% }
                        });
                    }
                    }); %>
